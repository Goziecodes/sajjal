<%include ../partials/header%>
<div id="bg-overlay">
    <img src="/images/aboutus-img.jpg" alt="">
    <div class="overlay-caption mt-4 text-info bg-transparent">

        <h1 class="res-text-lg">about us</h1>
        <h4 class="res-text-md">insights on who we are and what we do</h4>
    </div>
</div>
<h4 class="text-center text-success"><%= error %></h4> 
<main class="container">
	<div class="row">
		<div class="col-md-12">
			<form class="position-static text-info" action="/forgot" method="POST">
				<legend class="display-4">Forgot Password</legend>
				<small><p>please input an email you currently have access to</p></small> 
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" name="email" autofocus class="form-control">
				</div>
				<div class="form-group">
					<input type="submit" class="btn btn-primary" value="Reset Password">
				</div>
			</form>
		</div>
	</div>
</main>

<%include ../partials/footer%>