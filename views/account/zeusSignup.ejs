</head>

<body>
        <!-- [if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <header>
                <nav id="nav" class="navbar navbar-expand-sm navbar-light">
                        <img id="brand-img" src="/images/sajjal bank.png" alt="">
                        <!-- <img src="/images/img.jpg" alt=""> -->
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                                <ul class="ml-auto navbar-nav link">
                                        <a href="/" class="nav-link" data-hover="home"><span>home</span></a>
                                        <a href="/about" class="nav-link" data-hover="about"> <span>about</span></a>
                                        <a href="/banking" class="nav-link" data-hover="banking"> <span>banking</span></a>
                                        <!-- added code here to display log in and signup if not logged in and username nd logout if logged in -->
                                        <%if(!currentUser){ %>
                                        <a href="/login" class="nav-link" data-hover="login"><span> <i class="fa fa-lock"></i>
                                                        login </span></a>
                                        <% } else { %>
                                        <a href="" class="nav-link" data-hover="logged in as <%currentUser.username%>"><small>Logged
                                                        in as</small>
                                                <%=currentUser.username%></a>
                                        <a href="/logout" class="nav-link" data-hover="logout"><span>logout</span> </a>
                                        <% } %>
                                </ul>
                        </div>
                </nav>
        </header>
        
        <div id="bg-overlay">
                <img src="/images/bck-img.jpg" alt="">
                <div class="overlay-caption text-white bg-transparent">
            
                    <h1 class="res-text-lg">welcome</h1>
                        <h4 class="res-text-md">looking forward to serving your needs</h4>
                </div>
            </div>
        <%if(flag){%>
        <p class="text-danger text-center"> <small><%= err.message %> <a href="/login"> sign-in!</a></small></p>
        <%}%>

        <div id="std-form" class="mt-2 mb-5 px-3 pb-3 mx-auto">
                <form id="sgnup" action="/zeusSignup" method="post" class="text-center position-static">
                        <h4 class="my-3">please enter your details</h4>
                        <div class="form-group">
                                <div class="row">
                                        <div class="col-lg-2 col-2">
                                                <span class="fa fa-user-plus"></span>
                                        </div>
                                        <div class="col-lg-10 col-10">
                                                <input id="" class="form-control" type="text" name="username"
                                                        placeholder="username" required>
                                        </div>
                                </div>

                        </div>
                        <div class="form-group">
                                <div class="row">
                                        <div class="col-lg-2 col-2">
                                                <span class="fa fa-lock"></span>
                                        </div>
                                        <div class="col-lg-10 col-10">
                                                <input id="password" class="form-control" type="password" name="password"
                                                        placeholder="password" required>
                                        </div>
                                </div>

                        </div>
                        
                                
                        <div class="form-group">
                                <button id="form-submit" class="btn btn-success" type="submit">sign-up</button>
                               
                        </div>
                        <%if(!flag){%>
                        <p class="text-center"> <small>already a user??<a href="/login"> sign-in!</a></small> </p>
                        <%}%>
                </form>
        </div>
        <%include ../partials/footer%>