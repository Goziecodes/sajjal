<%include ../partials/header%>


<div id="bg-overlay">
    <img src="/images/aboutus-img.jpg" alt="">
    <div class="overlay-caption mt-4 text-info bg-transparent">

        <h1 class="res-text-lg">bank with us</h1>
        <h4 class="res-text-md">with different options based on your need</h4>
    </div>
</div>

<h4 class="text-center text-success"><%= success %></h4> 
