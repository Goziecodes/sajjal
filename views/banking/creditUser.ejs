<%include ../partials/header%>
<div id="bg-overlay">
    <img src="/images/banking-img.jpg" alt="">
    <div class="overlay-caption text-info bg-transparent">

        <h1>Admin</h1>
    </div>
</div>
<h4 class="text-center text-success"><%= error %></h4>
<main class="justify-content-center row container-fluid">
    <h3 class="text-center display-4">Credit details</h3>
    <form id="trans_form" class="w-75 p-5 mt-3" action="/banking/<%=user._id%>/credit" method="POST">
        <div class="form-group row">
            <div class="col-lg-4">

                <label for="bnk_acc">Account number</label>
            </div>
            <div class="col-lg-8">
                <input id="bnk_acc" name="trans[account_number]" class="form-control" type="number">
            </div>
            
        </div>  
        <div class="form-group row">
            <div class="col-lg-4">

                <label for="depo_name">Depositors name:</label>
            </div>
            <div class="col-lg-8">
                <input id="depo_name" name="trans[depositor_name]" class="form-control" type="text">
            </div>
            
        </div>
        <div class="form-group row">
            <div class="col-lg-6">
                <label for="date">Transaction Date:</label>
            </div>
            <div class="col-lg-6">
                <input id="date" name="trans[date]" class="form-control" type="date">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-4">
                <label for="details">details:</label>
            </div>
            <div class="col-lg-8">

                <textarea id="details" name="trans[details]" class="form-control"   cols="10" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-lg-4">

                <label for="bnk_addy">bank address:</label>
            </div>
            <div class="col-lg-8">
                <input id="bnk_addy" name="trans[bank_address]" class="form-control" type="text">
            </div>

        </div>
      
        <div class="form-group row">
            <div class="col-lg-6">
                <label for="trans_amt">Amount:</label>
            </div>
            <div class="col-lg-6">

                <input id="trans_amt" name="trans[transaction_amount]" class="form-control" type="number" required>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-lg-6">
                <label for="currentBalance">current Balance:</label>
            </div>
            <div class="col-lg-6">
                <input id="currentBalance" name="currentBalance" class="form-control" type="number" required>
            </div>
        </div>
        <div class="row justify-content-center">
                <button class="btn btn-success">submit</button>
        </div>

        
        
        
    </form>
</main>



<%include ../partials/footer%>
