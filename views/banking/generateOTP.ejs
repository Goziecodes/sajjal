<%include ../partials/header%>

<div id="bg-overlay">
    <img src="/images/aboutus-img.jpg" alt="">
    <div class="overlay-caption mt-4 text-info bg-transparent">

        <h1 class="res-text-lg">Generate OTP to confirm transaction</h1>
    </div>
</div>
<main class="container">
	<div class="row">
		<div class="col-md-12">
			<form class="position-static text-info" action="/banking/<%=currentUser._id%>/otp" method="POST">
				
				<small class="text-center"><p>An OTP will be sent to the Email associated with your account</p></small> 
				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" name="email" autofocus class="form-control" value="<%= user.email %>" disabled>
				</div>
				<div class="form-group text-center">
					<input type="submit" class="btn btn-primary" value="Generate OTP">
				</div>
			</form>
		</div>
	</div>
</main>

<%include ../partials/footer%>